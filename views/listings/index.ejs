<% layout("layout/boilerplate")%>
<style>
  #filters{
    display: flex;
    overflow-x: auto; 
    align-items: center;

  }
  .filters{
    text-align: center;
    margin-right: 2.5rem;
    margin-top: 2rem;
    opacity: 0.8;
  }
  .filters:hover{
    cursor: pointer;
    opacity: 0.7;
  }
  .filters p{
    font-size: 0.8rem;
  }
.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: auto;                /* let height adjust automatically */
  padding: 0.5rem 1rem;         /* smaller padding */
  margin-left: 1rem;
  display: flex;
  align-items: center;
  white-space: nowrap;          
}

</style>
<body>
    <div id="filters" >
      <div class="filters" >
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>

      <div class="filters" >
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>

      <div class="filters" >
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>

      <div class="filters" >
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castales</p>
      </div>
      
      <div class="filters">
        <div><i class="fa-solid fa-mug-hot"></i></div>
        <p>Bed & Breakfasts</p>
      </div>

      <div class="filters" >
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Pools</p>
      </div>
      
      <div class="filters" >
        <div><i class="fa-solid fa-house-chimney-window"></i></div>
        <p>Countryside</p>
      </div>

      <div class="filters" >
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Campign</p>
      </div>

      <div class="filters" >
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farm</p>
      </div>

      <div class="filters" >
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Artic</p>
      </div>

      <div class="tax-toggle">
        <div class="toggle-container">
            <div class="form-check-reverse form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
              <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
          </div>
      </div>
    </div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
 <%for(let list of lists){%>
  <a href="/listings/<%=list._id%>" class="card-link">
<div class="card listing-card  cols" >
  <img src="<%=list.image.url%>" class="card-img-top" alt="image"style="height: 20rem;">
  <div class="card-body">
    <h5 class="card-title"><b><%=list.title%></b></h5>
    <p class="card-text">&#x20B9;<%=list.price.toLocaleString("en-IN")%>/Night
    <i class="tax-info">&nbsp; &nbsp; + 18% GST</i></p>
  </div>
</div>
</a>
<%}%> 
</div>
</body>




